 <Application x:Class="Wpf_CooperativeFarmers.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wpf_CooperativeFarmers"
             Startup="Application_Startup"
             Exit="Application_Exit"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:String2FlowDirection x:Key="str2flow"/>
        <Style x:Key="Style_TbkCaption" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="12"/>           
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="80"/>


        </Style>


        <Style x:Key="Style_TbxForm" TargetType="TextBox">

            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Width" Value="130"/>

        </Style>

        <Style x:Key="Style_Window" TargetType="Window">
            <Setter Property="Height" Value="500"/>
            <Setter Property="Width" Value="700"/>
        </Style>
    </Application.Resources>
</Application>
